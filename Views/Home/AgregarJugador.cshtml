@{
    ViewData["Title"] = "AgregarJugador";
}



<h1 class="mt-5">Crear jugador</h1>

    <form class="mt-4" method="post" action='@Url.Action("GuardarJugador", "Home")' enctype="multipart/form-data">

        <input class="form-control" type="hidden" name="IdEquipo" value="@ViewBag.IdEquipo">
      
        <div class="form-group">
            <label>Nombre del jugador:</label>
            <input type="text" class="form-control" name="Nombre" placeholder="Nombre del jugador...">
            
        </div>

        <div class="form-group">
            <label>Fecha de nacimiento:</label>
            <input type="date" class="form-control" name="FechaNacimiento">
            
        </div>        

        <div class="form-group">
            <label>Equipo Actual:</label>
            <input type="text" class="form-control" name="EquipoActual" placeholder="Equipo del jugador...">
        </div>      

        <div class="form-group">
            <label>Camiseta:</label>
            <input type="number" class="form-control" name="NumCamiseta" placeholder="Numero de camiseta del jugador...">
        </div>  

        <div class="form-group">
            <label>Foto del jugador</label>
            <input type="file" class="form-control-file" name="Foto">
        </div>
        
        <button type="submit" class="btn btn-primary mt-4">Crear jugador</button>
    </form>

        